<UserControl x:Class="DataEditor.PatternInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Gray">
    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
        <InkCanvas x:Name="InkCanvas" Width="200" Height="300" StrokeCollected="InkCanvas_OnStrokeCollected">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Width="30" Height="30" />
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
    </Border>
</UserControl>
